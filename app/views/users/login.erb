<div class="container">
  <div class="row">
    <div class="col-md-12 text-center">
      <strong><%= @message %></strong>
    </div>
  </div>
  <div class="col-md-8 col-md-offset-3">
    <div class="row">
      <div class="col-xs-5">
        <h2>Login</h2>
        <hr/>
        <% if @login_error %>
          <div>
            <strong>Your username/password is incorrect.</strong>
          </div>
        <% end %>

        <form role="form" method="post" action="/login">
          <label>Username:</label>
          <input type="text" class="form-control" name="username" value="<%= @user.username %>">
          <label>Password:</label>
          <input type="password" class="form-control" name="password" value="<%= @user.password %>">
          <br>
          <div><input type="submit" class="btn btn-info" value="Submit"></div>
        </form>
      </div>
      <div class="col-xs-5">
        <h2>Sign Up</h2>
        <hr/>
        <% if @user.errors.any? %>
          <div>
            <strong>Please fix the following errors:</strong>
            <ul>
              <% @user.errors.full_messages.each do |user| %>
                <li><%= user %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <form role="form" method="post" action="/signup">
          <label>Username:</label>
          <input type="text" class="form-control" name="username" value="<%= @user.username %>">
          <label>Email(optional):</label>
          <input type="text" class="form-control" name="email" value="<%= @user.email %>">
          <label>Password:</label>
          <input type="password" class="form-control" name="password" value="<%= @user.password %>">
          <label>Validate Password:</label>
          <input type="password" class="form-control" name="validate_password">
          <br>
          <div><input type="submit" class="btn btn-info" value="Submit"></div>
        </form>
      </div>
    </div>
  </div>
</div>