Specific Documents Page.

<div class="container">
  <div class="col-md-11 col-md-offset-0.5">
      <% @document.paragraphs.each do |paragraph| %>
        
        <div class="row">
          <div class="col-xs-8"><%= paragraph.body %></div>
          <div class="col-xs-4 comment_bar">
            <% paragraph.comments.each do |comment| %>
              <%= comment.content %>
              <div class="col-xs-12 comment_user">
                - <em><%= User.find(comment.user_id).username%></em>
              </div>
            <% end %>
            <button type="button" id="add_comment" class="btn btn-default btn-sm">
              <span class="glyphicon glyphicon-plus-sign"></span>
            </button>
          </div>
        </div>
      <% end %> 
  </div>
</div>